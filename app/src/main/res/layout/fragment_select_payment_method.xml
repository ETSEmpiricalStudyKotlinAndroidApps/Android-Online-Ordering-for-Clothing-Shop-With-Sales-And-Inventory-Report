<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".presentation.client.checkout.SelectPaymentMethodFragment">

    <RadioGroup
        android:id="@+id/rbGroupPaymentMethods"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RadioButton
            android:id="@+id/rbCod"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/rb_cod"
            android:textAllCaps="true"
            android:textAppearance="?attr/textAppearanceBody1" />

        <!--        <RadioButton-->
        <!--            android:id="@+id/rbGCash"-->
        <!--            android:layout_width="match_parent"-->
        <!--            android:layout_height="wrap_content"-->
        <!--            android:text="@string/rb_gcash"-->
        <!--            android:textAllCaps="true"-->
        <!--            android:textAppearance="?attr/textAppearanceBody1" />-->

        <!--        <RadioButton-->
        <!--            android:id="@+id/rbPaymaya"-->
        <!--            android:layout_width="match_parent"-->
        <!--            android:layout_height="wrap_content"-->
        <!--            android:enabled="false"-->
        <!--            android:text="@string/rb_paymaya"-->
        <!--            android:textAllCaps="true"-->
        <!--            android:textAppearance="?attr/textAppearanceBody1" />-->

        <RadioButton
            android:id="@+id/rbCreditDebit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/rb_credit_debit_card"
            android:textAllCaps="true"
            android:textAppearance="?attr/textAppearanceBody1" />
    </RadioGroup>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnChoosePaymentMethod"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/label_choose_payment_method"
        android:backgroundTint="@color/teal_200"
        android:textColor="@android:color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rbGroupPaymentMethods" />

</androidx.constraintlayout.widget.ConstraintLayout>